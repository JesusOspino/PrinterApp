<Window x:Class="NovaPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovaPrinter"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Nova Printer" 
        Height="600" Width="900"
        Background="#FAFAFA"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu lateral -->
        <StackPanel Background="#2D2F31" Grid.Column="0" >
            <TextBlock Text="Nova Printer" Foreground="White" FontSize="20" FontWeight="Bold" Margin="15"/>
            <Button x:Name="BtnApiConfig" Content="Configuración API" Margin="10" Padding="8"/>
            <Button x:Name="BtnPrinters" Content="Configuración Impresoras" Margin="10" Padding="8"/>
            <Button x:Name="BtnAbout" Content="Acerca de" Margin="10" Padding="8"/>
            <StackPanel VerticalAlignment="Bottom" Margin="10">
                <TextBlock Text="Estado:" Foreground="White" FontWeight="Bold" />
                <TextBlock x:Name="TxtStatus" Text="Desconectado" Foreground="LightGray" />
            </StackPanel>
        </StackPanel>

        <!-- Contenido -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Margin="15"/>
    </Grid>

