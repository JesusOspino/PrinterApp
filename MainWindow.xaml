<Window x:Class="NovaPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovaPrinter"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Nova Printer" 
        Height="600" Width="900"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Estilo para los botones del menú -->
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15 10"/>
            <Setter Property="Margin" Value="5 2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter x:Name="contentPresenter"
                                            Content="{TemplateBinding Content}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3E4042"/>
                                <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4E5052"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el área de estado -->
        <Style TargetType="Border" x:Key="StatusPanelStyle">
            <Setter Property="Background" Value="#252729"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15 10"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu lateral -->
        <Border Grid.Column="0" Background="#2D2F31">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Encabezado del menú -->
                <StackPanel Grid.Row="0" Margin="15 20 15 25">
                    <TextBlock Text="NOVA" 
                               Foreground="#4285F4" 
                               FontSize="22" 
                               FontWeight="Bold"/>
                    <TextBlock Text="PRINTER" 
                               Foreground="White" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Margin="0 -5 0 0"/>
                    <Rectangle Height="2" 
                               Margin="0 15 0 0" 
                               Fill="#3E4042"/>
                </StackPanel>

                <!-- Elementos del menú -->
                <StackPanel Grid.Row="1" Margin="0 10">
                    <Button x:Name="BtnApiConfig" 
                            Content="Configuración API" 
                            Style="{StaticResource MenuButtonStyle}"/>
                    <Button x:Name="BtnPrinters" 
                            Content="Configuración Impresoras" 
                            Style="{StaticResource MenuButtonStyle}"/>
                    <Button x:Name="BtnAuth" 
                            Content="Autenticación" 
                            Style="{StaticResource MenuButtonStyle}"/>
                    <Button x:Name="BtnAbout" 
                            Content="Acerca de" 
                            Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>

                <!-- Área de estado mejorada -->
                <Border Grid.Row="2" 
                        Style="{StaticResource StatusPanelStyle}"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock Text="Estado de conexión:" 
                                   Foreground="#A0A0A0" 
                                   FontSize="12"
                                   Margin="0 0 0 3"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="StatusIndicator" 
                                    Width="10" 
                                    Height="10" 
                                    Fill="#FF4444" 
                                    Margin="0 0 8 0"/>
                            <TextBlock x:Name="TxtStatus" 
                                       Text="Desconectado" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Border Grid.Column="1" CornerRadius="6" Margin="10">
            <ContentControl x:Name="MainContent"/>
        </Border>
        
        <!-- Contenido 
        <ContentControl x:Name="MainContent" Grid.Column="1" />-->
    </Grid>

</Window>
