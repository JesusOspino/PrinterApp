<UserControl x:Class="NovaPrinter.Views.PrintersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPrinter.Views"
             Padding="10">
    
    <UserControl.Resources>

        <!-- Definición del efecto de sombra (agregar en recursos) -->
        <DropShadowEffect x:Key="ShadowEffect" 
                  BlurRadius="10" 
                  ShadowDepth="2" 
                  Opacity="0.2"
                  Color="#FF000000"/>

        <Style TargetType="ComboBox" x:Key="StyleComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox" x:Key="StyleTextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="StyleLabel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <Style TargetType="Button" x:Key="StyleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="8" Background="White" Padding="15" 
                BorderThickness="1" BorderBrush="#FFE0E0E0"
                Effect="{StaticResource ShadowEffect}">

            <StackPanel>

                <TextBlock Text="Configuración de Impresoras" FontSize="18" FontWeight="SemiBold" Foreground="#FF333333" Margin="0,0,0,15"/>

                <GroupBox Header="Seleccionar impresora por defecto" Padding="10" Margin="0,0,0,10" BorderBrush="#FFE0E0E0" FontWeight="SemiBold" Foreground="#FF444444">
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="CmbPrinters" Width="420" Style="{StaticResource StyleComboBox}" />
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnSavePrinter" 
                            Content="Guardar" 
                            Style="{StaticResource StyleButton}" 
                            Background="#FF34A853" 
                            Foreground="White" 
                            Click="BtnSavePrinter_Click"/>
                </StackPanel>
            </StackPanel>
            
        </Border>
    </Grid>
</UserControl>
