<UserControl x:Class="NovaPrinter.Views.PrintersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPrinter.Views"
             Padding="10">
    <StackPanel>
        <TextBlock Text="Configuración de Impresoras" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <GroupBox Header="Seleccionar impresora por defecto" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <ComboBox x:Name="CmbPrinters" Width="420" />
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnSavePrinter" Content="Guardar" Width="100" Click="BtnSavePrinter_Click"/>
        </StackPanel>
    </StackPanel>
</UserControl>
