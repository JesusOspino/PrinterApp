<UserControl x:Class="NovaPrinter.Views.AuthPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPrinter.Views"
             Padding="15">
    <UserControl.Resources>

        <!-- Definición del efecto de sombra (agregar en recursos) -->
        <DropShadowEffect x:Key="ShadowEffect" 
                  BlurRadius="10" 
                  ShadowDepth="2" 
                  Opacity="0.2"
                  Color="#FF000000"/>

        <Style TargetType="TextBox" x:Key="StyleTextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox" x:Key="StylePasswordBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="StyleLabel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <Style TargetType="Button" x:Key="StyleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="8" Background="White" Padding="15" 
            BorderThickness="1" BorderBrush="#FFE0E0E0"
            Effect="{StaticResource ShadowEffect}">

            <StackPanel>

                <TextBlock Text="Autenticación" FontSize="18" FontWeight="SemiBold" Foreground="#FF333333" Margin="0,0,0,15"/>

                <GroupBox Header="Creadenciales" Padding="10" Margin="0,0,0,10" BorderBrush="#FFE0E0E0" FontWeight="SemiBold" Foreground="#FF444444">

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Usuario:" Style="{StaticResource StyleLabel}" />
                            <TextBox x:Name="TxtUsername" Width="200" Style="{StaticResource StyleTextBox}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Contraseña:" Style="{StaticResource StyleLabel}" />
                            <PasswordBox x:Name="TxtPassword" Width="200" Style="{StaticResource StylePasswordBox}"/>
                        </StackPanel>
                    </StackPanel>

                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="BtnSave" Content="Guardar" Style="{StaticResource StyleButton}" Background="#FF34A853" Foreground="White" Click="BtnSave_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>
