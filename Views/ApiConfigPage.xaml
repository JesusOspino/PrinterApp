<UserControl x:Class="NovaPrinter.Views.ApiConfigPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPrinter.Views"
             Padding="10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Configuración API" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <GroupBox Header="Conexión" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="API URL:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtApiUrl" Width="400"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Hub:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtHub" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Company:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtCompany" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="CompanyId:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtCompanyId" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="TenantId:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtTenantId" Width="200"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="BtnConnect" Content="Conectar" Width="100" Margin="0,0,10,0"/>
                <Button x:Name="BtnSave" Content="Guardar" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
